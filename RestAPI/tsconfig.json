{
    "compilerOptions": {
        "baseUrl": "./",
        "module": "CommonJS",
        "outDir": "dist",
        "target": "ESNext",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "src/@types",
            "node_modules/@types",
            "typings/@types"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*",
        "package.json",
        ".npmrc"
    ],
    "exclude": [
        "node_modules",
        "src/interface",
        "storage"
    ]
}
